{
  "version": 2,
  "builds": [
    {
      "src": "Server/package.json",  
      "use": "@vercel/node",         
      "config": {
        "includeFiles": [
          "Server/dist/**/*"       
        ]
      }
    },
    {
      "src": "Client/package.json",  
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",           
      "dest": "Server/dist/main.js" 
    },
    {
      "src": "/(.*)",               
      "dest": "Client/$1"           
    }
  ]
}