{
  "version": 2,
  "builds": [
    {
      "src": "server/package.json",  
      "use": "@vercel/node",         
      "config": {
        "includeFiles": [
          "server/dist/**/*"       
        ]
      }
    },
    {
      "src": "client/package.json",  
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",           
      "dest": "server/dist/main.js" 
    },
    {
      "src": "/(.*)",               
      "dest": "client/$1"           
    }
  ]
}