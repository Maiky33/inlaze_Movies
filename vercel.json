{
  "version": 2,
  "builds": [
    { "src": "Client/package.json", "use": "@vercel/static-build" },
    { "src": "Server/package.json", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/Server/dist/$1" },
    { "src": "/static/(.*)", "dest": "/Client/static/$1" },
    { "src": "/(.*)", "dest": "/Client/$1" }
  ]
}
  