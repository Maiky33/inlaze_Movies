{
  "version": 2,
  "builds": [
    {
      "src": "Client/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "Server/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["Server/dist/**/*"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/Server/dist/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "/Client/$1"
    }
  ]
}