{
    "version": 2,
    "builds": [
      { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "client/out" } },
      { "src": "server/src/main.ts", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/server/src/$1" },
      { "src": "/(.*)", "dest": "/client/$1" }
    ]
}
  